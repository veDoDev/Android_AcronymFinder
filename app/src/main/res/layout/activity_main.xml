<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:padding="24dp"
    android:background="#121212">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Acronym Finder"
        android:textColor="#03DAC6"
        android:textSize="28sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="180dp" />

    <!-- Input Field -->
    <EditText
        android:id="@+id/etAcronymInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter acronym / Hit Get Random Acronym"
        android:layout_marginTop="32dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#BBBBBB"
        android:padding="14dp"
        android:textSize="16sp"
        android:inputType="text"
        android:gravity="center" />

    <!-- Added Button: Get Random Acronym -->
    <Button
        android:id="@+id/btnGetRandomAcronym"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Random Acronym"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:textColor="#121212"
        android:backgroundTint="#03DAC6"
        android:padding="12dp" />

    <!-- Button -->
    <Button
        android:id="@+id/btnSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Find Full Form"
        android:layout_marginTop="28dp"
        android:textSize="18sp"
        android:textColor="#121212"
        android:backgroundTint="#03DAC6"
        android:padding="12dp" />

    <!-- Output -->
    <TextView
        android:id="@+id/tvFullFormOutput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:text="Full form will appear here"
        android:textColor="#BBBBBB"
        android:textSize="18sp"
        android:textStyle="italic" />

</LinearLayout>
